<form class="form-horizontal">
    <div id="LoginArea" class="container well bs-component">
        <div class="row-fluid">
            <div class="row-fluid">
                <div class="col-sm-12 loginHeader">
                    <div class="pull-right">
                        <img alt="Emerio BluePrint" src="~/App/Account/images/blueprint_logo1.jpg" />
                    </div>
                    <div class="loginText">
                        Secured Access
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="col-sm-8 loginLeftBanner">
                </div>
                <div class="col-sm-4 loginSection">
                    <fieldset>
                        <legend></legend>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="email" class="form-control floating-label" id="EmailAddressInput" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="password" class="form-control" id="PasswordInput" placeholder="Password">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="RememberMeInput">
                                        <span class="ripple"></span>
                                        <span class="check"></span> Remember me
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-6">
                                <button id="LoginButton" class="btn btn-primary btn-raised"><i class="fa fa-sign-out"></i> Login</button>
                            </div>
                            <div class="col-lg-6">
                                <button id="WinButton" class="btn btn-default btn-raised"><i class="icon-windows-bp "></i> Use Windows</button>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12 pull-right">
                                <a class="btn btn-link pull-right" href="javascript:void(0)"><i class="icon-security-bp"></i> Forgot your Password?</a>
                            </div>
                        </div>
                    </fieldset>

                </div>
            </div>
        </div>
    </div>
</form>

@section styles
{
    <link href="~/App/Account/css/login.css" rel="stylesheet" />
}

@section scripts
{
    <script src="~/App/Account/js/login.js"></script>
}
